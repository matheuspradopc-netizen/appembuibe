run = "cd backend && pip install -r requirements.txt && python create_tables.py && python seed_data.py && uvicorn app.main:app --host 0.0.0.0 --port 8080"
entrypoint = "backend/app/main.py"
modules = ["web", "python-3.12", "nodejs-20"]

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "cd backend && uvicorn app.main:app --host 0.0.0.0 --port 8080"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 8080
externalPort = 80
